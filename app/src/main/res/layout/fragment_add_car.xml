<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Car Number -->
        <EditText
            android:id="@+id/etCarNumberAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car Number" />

        <!-- Car Name -->
        <EditText
            android:id="@+id/etNameCarAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name of Car" />

        <!-- Car Model -->
        <EditText
            android:id="@+id/etCarModelAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car Model" />

        <!-- Year of Car -->
        <Spinner
            android:id="@+id/yearOfCarSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year of Car" />

        <!-- Manufacturer -->
        <EditText
            android:id="@+id/etManufacturerAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Manufacturer" />

        <!-- Car Type -->
        <EditText
            android:id="@+id/etCarTypeAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car Type" />

        <!-- Year of Test -->
        <EditText
            android:id="@+id/etTestAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year of Test" />

        <!-- Kilometres -->
        <EditText
            android:id="@+id/etKilometreAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kilometres" />

        <!-- Engine Capacity -->
        <EditText
            android:id="@+id/etEngineCapacityAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Engine Capacity" />

        <!-- ... other views ... -->

        <!-- Owners -->
        <EditText
            android:id="@+id/etOwnersAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Owners" />

        <!-- Horse Power -->
        <EditText
            android:id="@+id/etHorsePowerAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Horse Power" />

        <!-- Gear Shifting Model -->
        <EditText
            android:id="@+id/etGearShiftAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gear Shifting Model" />

        <!-- Color Spinner -->
        <Spinner
            android:id="@+id/ColorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color" />

        <!-- Price -->
        <EditText
            android:id="@+id/etPriceAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price" />

        <!-- Buttons for actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivCarAddCarFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/btnAddCarADDFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:layout_marginStart="16dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>


